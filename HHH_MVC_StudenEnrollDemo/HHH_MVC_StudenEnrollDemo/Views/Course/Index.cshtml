@model IEnumerable<HHH_MVC_StudenEnrollDemo.Models.Course>

@{
    ViewBag.Title = "Course List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="mt-3">Available Courses</h3>

<table id="coursesTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Course Name</th>
            <th>Instructor</th>
            <th>Duration</th>
            <th>Fee</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Id</td>
                <td>@course.Name</td>
                <td>@course.Instructor</td>
                <td>@course.DurationTime</td>
                <td>@course.CourseFee.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#coursesTable').DataTable();
    });
</script>